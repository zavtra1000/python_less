print ('введите четырех значное число')
s = int(input())
h = s//1000
a = s//10%10 
b = s//10%10%10
c = s%10 
d = max(h, a, b, c)

print ('у числа', s, 'максимальная цифра равна', d)



или 

print ('введите четырех значное число')
s = int(input())
h = (s//1000, s//10%10, s//10%10%10, s%10) 
a = max(h)

print ('у числа', s, 'максимальная цифра равна', a)

